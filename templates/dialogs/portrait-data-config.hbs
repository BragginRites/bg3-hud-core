{{!-- Body content - wrapped by application --}}
<div class="form-group">
    <label for="showPortraitData">Enable Portrait Data</label>
    <input type="checkbox" name="showPortraitData" id="showPortraitData" {{#if showPortraitData}}checked{{/if}}>
    <p class="hint">Display data badges around the character portrait</p>
</div>

<hr>

<p class="notes">
    Configure data badges to display around the portrait. Leave paths blank to hide a slot.
</p>
<p class="notes hint">
    <strong>Examples:</strong>
    <code>system.attributes.ac.value</code>,
    <code>\{{system.resources.heroPoints.value}}/\{{system.resources.heroPoints.max}}</code>,
    <code>itemName:Focus Points:system.uses.value</code>
</p>

{{#each slots}}
<fieldset data-slot="{{key}}">
    <legend>{{label}}</legend>

    <div class="form-group">
        <label>Attribute Path</label>
        <div class="form-fields">
            <input type="text" name="path-{{key}}" class="path-input" value="{{path}}"
                placeholder="e.g., system.attributes.ac.value">
            <select class="attr-select">
                <option value="">— Select —</option>
                {{#each ../attrChoices}}
                <option value="{{value}}" {{#if (eq value ../path)}}selected{{/if}}>{{value}}</option>
                {{/each}}
            </select>
        </div>
    </div>

    <div class="form-group">
        <label>Icon</label>
        <div class="form-fields">
            <input type="text" name="icon-{{key}}" class="icon-input" value="{{icon}}"
                placeholder="e.g., fas fa-shield-alt">
            <button type="button" class="icon-picker-btn" title="Pick an icon">
                <i class="fas fa-icons"></i>
            </button>
        </div>
    </div>

    <div class="form-group">
        <label>Icon Color</label>
        <div class="form-fields">
            <input type="text" name="iconColor-{{key}}" class="color-input" value="{{iconColor}}">
            <input type="color" value="{{iconColor}}" data-target="iconColor-{{key}}">
        </div>
    </div>

    <div class="form-group">
        <label>Text Color</label>
        <div class="form-fields">
            <input type="text" name="textColor-{{key}}" class="color-input" value="{{textColor}}">
            <input type="color" value="{{textColor}}" data-target="textColor-{{key}}">
        </div>
    </div>
</fieldset>
{{/each}}